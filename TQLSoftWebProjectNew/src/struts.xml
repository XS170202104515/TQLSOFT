<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd" >
<struts>
	<package name="struts_tag" extends="struts-default" namespace="/">
	
		<interceptors>
			<interceptor name="loginInterceptor" class="loginInterceptor"/>
		</interceptors>
		
		<action name="login" class="userAction" method="logincheck">
			<result name="success">/index.jsp</result>
			<result name="admin">/adminIndex.jsp</result>
			<result name="login">/login.jsp</result>
		</action>
		
		
		<!-- 可删除，interceptor为拦截器配置 -->
		<action name="register" class="userAction" method="register">
			<result name="login">/login.jsp</result>	
			<result name="success">/login.jsp</result>
		</action>
		
		<action name="choseGame" class="gameAction" method="choseGame">
			<result name="chose">/gameIntroduce.jsp</result>
		</action>
		
		<action name="shopp" class="shoppingtroelleyAction">
			<result name="shopp">/ShoppingTroelley.jsp</result>
			<result name="success">/index.jsp</result>
		</action>
		
		<action name="shoppcart" class="shoppingtroelleyAction" method="ShoppCart">
			<result name="shopp">/ShoppingTroelley.jsp</result>
		</action>
				
		<!-- 进入修改密码页面 -->
		<action name="changePassword" class="changePasswordAction">
			<result name="success">/changePassword.jsp</result>
			<result name="close">/changePassword.jsp</result>
		</action>
		
		<!-- 进入修改信息 -->
		<action name="updateMessage" class="updateMessageAction">
			<result name="success">/updateMessage.jsp</result>
		</action>
		
		<!-- 获取论坛信息 -->
		<action name="forumcheck" class="ForumAction" method="forumcheck">
			<result name="success">/luntan.jsp</result>
		</action>
		
		<!-- 获取论坛的所有帖子信息 -->
		<action name="postaction" class="PostAction" method="forumcheck">
			<result name="success">/tiezi.jsp</result>
		</action>
		
		<!-- 写论坛的所有帖子信息 -->
			<action name="postwriteaction" class="PostWriteAction" method="forumcheck">
			<result name="success">/tiezi.jsp</result>
		</action>
		
		<!-- 跳转到评论信息 -->
		<action name="postcmaction" class="PostCmAction" >
			<result name="success">/postcm.jsp</result>
		</action>
		
		<!-- 获取游戏信息 -->
		<action name="getGame" class="gameAction" method="getGame">
			<result name="success">/browseGame.jsp</result>
			<result name="admin">/adminbrowseGame.jsp</result>
		</action>
		
		<!-- 获取个人游戏库信息 -->
		<action name="getPersonalGame" class="gameAction" method="getPersonalGame">
			<result name="success">/personal.jsp</result>
		</action>
		
		<!-- 获取好友 -->
		<action name="friendbrowse" class="friendAction" method="forumcheck">
			<result name="success">/friend.jsp</result>
		</action>
		
		<!-- 查询好友 -->
		<action name="findFriend" class="friendAction" method="findFriend">
			<result name="success">/friend.jsp</result>
		</action>
		
		<!-- 添加好友 -->
		<action name="addFriend" class="friendAction" method="addFriend">
			<result name="success">/friend.jsp</result>
		</action>
		
		<!-- 管理员-->
		<action name="adminAction" class="adminAction">
			<result name="success">/deUser.jsp</result>
			<result name="update">/updateGame.jsp</result>
			<result name="depost">/dePost.jsp</result>
			<result name="postcomment">/depostcomment.jsp</result>
		</action>
	</package>
</struts>